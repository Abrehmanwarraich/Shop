{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "src-compiled",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src-compiled"
    ]
}